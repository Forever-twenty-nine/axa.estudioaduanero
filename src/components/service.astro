---
interface Props {
    title: string;
    description: string;
    icon: string;
}
const { title, description,icon } = Astro.props;
---
<div class="bg-primary shadow-lg rounded-lg p-6 pb-6 md:p-6 hover:shadow-xl 
            transition-shadow duration-300 text-text w-full max-w-sm mx-auto h-[300px] 
            flex items-center animate-fade-down animate-once animate-duration-[2000ms]">
    <div class="flex flex-col items-center h-full">
        <span class="text-4xl mb-4 flex-shrink-0">
            {icon}
        </span>
        <h3 class="text-xl md:text-2xl font-semibold text-text mb-3 md:mb-4 break-words">{title}</h3>
        <p class="text-sm md:text-base text-text break-words">
          {description}
        </p>
    </div>
</div>

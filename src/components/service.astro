---
import { Image } from "astro:assets";
interface Props {
    title: string;
    description: string;
    img: string;
}
const { title, description, img } = Astro.props;
---

<style>
    .service-card {
        max-width: 400px; /* Aumenta el ancho máximo */
        margin: 1rem;
    }
    .service-card img {
        object-fit: cover;
        height: 150px; /* Reduce la altura de la imagen */
    }
    .service-card .content {
        padding: 1rem;
    }
</style>

<div  class="max-w-md bg-primary border border-secondary rounded-lg shadow-lg m-4">
    <Image
        src={`${import.meta.env.BASE_URL}${img}`}
        alt={title}
        class="rounded-t-lg"
        loading="lazy"
        width="500"
        height="200"
    />

    <div class="p-5">
        <a href="#contact">
            <h5
                class="mb-2 text-2xl font-bold h-16 tracking-tight text-text text-center"
            >
                {title}
            </h5>
        </a>
        <p class="mb-3 py-4 font-normal text-text">
            {description}
        </p>
        <a
            href="#contact"
            class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-text bg-primary rounded-lg hover:bg-accent focus:ring-4 focus:outline-none focus:accent"
        >
            Contáctanos
            <svg
                class="rtl:rotate-180 w-3.5 h-3.5 ms-2"
                aria-hidden="true"
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 14 10"
            >
                <path
                    stroke="currentColor"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M1 5h12m0 0L9 1m4 4L9 9"></path>
            </svg>
        </a>
    </div>
</div>

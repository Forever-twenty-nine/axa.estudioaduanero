---

import { Image } from 'astro:assets';

interface Props {
    name: string;
    role: string;
    message: string;
    image: string;
} 
const { name, role, message, image } = Astro.props;
---
<figure class="relative rounded-2xl bg-primary p-6 shadow-xl shadow-slate-900/10">

    <div class="flex items-center mb-4">
        {Array.from({ length: 5 }).map(() => (
            <svg class="h-5 w-5 text-yellow-500" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.286 3.97a1 1 0 00.95.69h4.18c.969 0 1.371 1.24.588 1.81l-3.392 2.46a1 1 0 00-.364 1.118l1.286 3.97c.3.921-.755 1.688-1.54 1.118l-3.392-2.46a1 1 0 00-1.176 0l-3.392 2.46c-.784.57-1.838-.197-1.54-1.118l1.286-3.97a1 1 0 00-.364-1.118L2.045 9.397c-.783-.57-.38-1.81.588-1.81h4.18a1 1 0 00.95-.69l1.286-3.97z"/>
            </svg>
        ))}
    </div>


    <blockquote class="relative">
        <p class="text-lg tracking-tight text-text">
            {message}
        </p>
    </blockquote>
        
    <figcaption class="relative mt-6 flex items-center justify-between border-t border-text pt-6">
          
        <div>
            <div class="font-display text-base text-text">
              {name}
            </div>
            <div class="text-sm text-text">{role}</div>
        </div>
          
        <div class="overflow-hidden rounded-full bg-text">
            <Image
              alt="Foto de {name}"
              inferSize
              class="h-14 w-14 object-cover"
              src={image}
            />
        </div>
    </figcaption>
</figure>
<div class="flex items-center mb-4">
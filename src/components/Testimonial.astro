---
interface Props {
    name: string;
    role: string;
    message: string;
    image: string;
} 
const { name, role, message, image } = Astro.props;
---

<article class="group h-full flex flex-col bg-gray-50 dark:bg-gray-900 rounded-2xl border border-gray-200 dark:border-gray-800 p-6 lg:p-8 hover:shadow-xl transition-all duration-300">
    <!-- Comillas decorativas -->
    <div class="mb-6">
        <svg class="w-10 h-10 text-blue-500 dark:text-blue-400 opacity-50" fill="currentColor" viewBox="0 0 24 24">
            <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
        </svg>
    </div>

    <!-- Mensaje -->
    <blockquote class="flex-1 mb-6">
        <p class="text-base lg:text-lg text-gray-700 dark:text-gray-300 leading-relaxed">
            {message}
        </p>
    </blockquote>

    <!-- Información del cliente -->
    <div class="flex items-center gap-4 pt-6 border-t border-gray-300 dark:border-gray-700">
        <!-- Avatar -->
        <div class="relative shrink-0">
            <div class="w-14 h-14 rounded-full overflow-hidden border-2 border-blue-500 dark:border-blue-400 bg-gray-200 dark:bg-gray-700">
                <img
                    src={image}
                    alt={`Foto de ${name}`}
                    width="56"
                    height="56"
                    class="w-full h-full object-cover"
                    loading="lazy"
                />
            </div>
        </div>

        <!-- Nombre y rol -->
        <div class="flex-1">
            <h3 class="font-bold text-gray-900 dark:text-white text-base lg:text-lg">
                {name}
            </h3>
            <p class="text-sm text-gray-700 dark:text-gray-300">
                {role}
            </p>
        </div>

        <!-- Estrellas de calificación -->
        <div class="flex gap-1">
            {Array.from({ length: 5 }).map(() => (
                <svg class="w-5 h-5 text-yellow-500 dark:text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.286 3.97a1 1 0 00.95.69h4.18c.969 0 1.371 1.24.588 1.81l-3.392 2.46a1 1 0 00-.364 1.118l1.286 3.97c.3.921-.755 1.688-1.54 1.118l-3.392-2.46a1 1 0 00-1.176 0l-3.392 2.46c-.784.57-1.838-.197-1.54-1.118l1.286-3.97a1 1 0 00-.364-1.118L2.045 9.397c-.783-.57-.38-1.81.588-1.81h4.18a1 1 0 00.95-.69l1.286-3.97z"/>
                </svg>
            ))}
        </div>
    </div>
</article>
---
import { Image } from 'astro:assets';

import HeaderSection from "../shared/HeaderSection.astro";

import ContactData from "./ContactData.astro";

import { headerContact, ownerContact, datacontact } from "../data/data.ts";
---
<section id="contact" class="relative overflow-hidden pt-32 flex items-center justify-center">
  <div class="container  py-4 mx-auto px-4 sm:px-6 lg:px-8">
    <HeaderSection {...headerContact} />

    <div class=" shadow-lg rounded-lg p-6 text-center max-w-sm mx-auto">
      <Image src={ownerContact.image}
        alt="Contact Image"
        class="w-full h-auto mb-4 rounded-lg"
        width={600}
        height={200} />
      
      <div class="text-xl font-bold text-text"> {ownerContact.name} </div>
      <div class="text-primary mt-2">{ownerContact.role}</div>
    </div>
    <div class="flex justify-center mt-4">

    <div class=" mt-4 py-4 px-4 grid grid-cols-1 sm:grid-cols-2 gap-4">
        {datacontact.map((contact) => (
            <ContactData {...contact} />
        ))}
    </div>
  </div>
</section>
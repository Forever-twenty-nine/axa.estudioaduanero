---
import { hero } from "../data/data";
---

<section class="relative min-h-[calc(100vh-5rem)] flex items-center overflow-hidden bg-white dark:bg-gray-950 transition-colors duration-300">
    <!-- Fondo decorativo con gradientes -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <!-- Orbes decorativos unificados -->
        <div class="absolute top-0 -left-4 w-96 h-96 bg-purple-500/10 dark:bg-purple-500/5 rounded-full blur-3xl"></div>
        <div class="absolute top-20 right-4 w-96 h-96 bg-blue-500/10 dark:bg-blue-500/5 rounded-full blur-3xl"></div>
        <div class="absolute -bottom-8 left-20 w-96 h-96 bg-purple-500/10 dark:bg-purple-500/5 rounded-full blur-3xl"></div>
    </div>

    <div class="container relative mx-auto px-4 sm:px-6 lg:px-8 py-12 lg:py-20">
        <div class="grid lg:grid-cols-2 gap-8 lg:gap-12 items-center">
            <!-- Contenido de texto -->
            <div class="space-y-6 lg:space-y-8 animate-fade-in">
                <!-- Badge -->
                <div class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full bg-linear-to-r from-blue-100 to-purple-100 dark:from-blue-950 dark:to-purple-950 border border-blue-200 dark:border-blue-800">
                    <span class="relative flex h-2 w-2">
                        <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-blue-500 opacity-75"></span>
                        <span class="relative inline-flex rounded-full h-2 w-2 bg-blue-600 dark:bg-blue-400"></span>
                    </span>
                    <span class="text-sm font-medium bg-linear-to-r from-blue-700 to-purple-700 dark:from-blue-400 dark:to-purple-400 bg-clip-text text-transparent">
                        Servicios Aduaneros Profesionales
                    </span>
                </div>

                <!-- Título principal con gradiente -->
                <h1 class="text-4xl sm:text-5xl lg:text-6xl xl:text-7xl font-bold leading-tight">
                    <span class="block text-gray-900 dark:text-white mb-2">
                        {hero.title.split(' ').slice(0, -2).join(' ')}
                    </span>
                    <span class="block bg-linear-to-r from-blue-600 to-purple-600 dark:from-blue-400 dark:to-purple-400 bg-clip-text text-transparent">
                        {hero.title.split(' ').slice(-2).join(' ')}
                    </span>
                </h1>

                <!-- Descripción -->
                <p class="text-lg sm:text-xl text-gray-600 dark:text-gray-400 leading-relaxed max-w-2xl">
                    {hero.description}
                </p>

                <!-- Botones de acción -->
                <div class="flex flex-col sm:flex-row gap-4">
                    <a
                        href="#contact"
                        class="group inline-flex items-center justify-center px-6 py-3.5 text-base font-semibold text-white bg-linear-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 rounded-xl shadow-lg hover:shadow-xl transition-all duration-200 transform hover:scale-105"
                    >
                        {hero.button}
                        <svg
                            class="w-5 h-5 ml-2 transition-transform group-hover:translate-x-1"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M13 7l5 5m0 0l-5 5m5-5H6"
                            ></path>
                        </svg>
                    </a>
                    
                    <a
                        href="#services"
                        class="inline-flex items-center justify-center px-8 py-3 text-base font-semibold text-gray-700 dark:text-gray-200 bg-white dark:bg-gray-800 border-2 border-gray-300 dark:border-gray-600 rounded-xl hover:border-blue-500 dark:hover:border-blue-400 hover:shadow-lg hover:scale-105 transition-all duration-300"
                    >
                        Conocer más
                        <svg
                            class="w-5 h-5 ml-2 transition-transform group-hover:translate-y-1"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M19 9l-7 7-7-7"
                            ></path>
                        </svg>
                    </a>
                </div>
            </div>

            <!-- Imagen con efectos -->
            <div class="relative lg:h-[600px] animate-fade-in-up">
                <!-- Contenedor de la imagen con efectos -->
                <div class="relative h-full">
                    <!-- Efecto de brillo detrás de la imagen -->
                    <div class="absolute inset-0 bg-linear-to-br from-blue-500/20 to-purple-500/20 dark:from-blue-500/10 dark:to-purple-500/10 rounded-3xl blur-2xl"></div>
                    
                    <!-- Imagen principal -->
                    <div class="relative h-full rounded-2xl overflow-hidden shadow-2xl border border-gray-200 dark:border-gray-800 bg-white dark:bg-gray-900">
                        <img
                            src={`${import.meta.env.BASE_URL}${hero.image}`}
                            alt="Servicios aduaneros profesionales"
                            width="600"
                            height="600"
                            loading="eager"
                            class="w-full h-full object-cover"
                        />
                        
                        <!-- Overlay con gradiente sutil -->
                        <div class="absolute inset-0 bg-linear-to-t from-gray-900/20 to-transparent dark:from-gray-900/40"></div>
                    </div>

                    <!-- Elementos decorativos flotantes -->
                    <div class="absolute -top-4 -right-4 w-24 h-24 bg-blue-500 rounded-full opacity-20 blur-xl animate-pulse"></div>
                    <div class="absolute -bottom-4 -left-4 w-32 h-32 bg-purple-500 rounded-full opacity-20 blur-xl animate-pulse" style="animation-delay: 1s;"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Indicador de scroll -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
        <svg class="w-6 h-6 text-gray-400 dark:text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
        </svg>
    </div>
</section>

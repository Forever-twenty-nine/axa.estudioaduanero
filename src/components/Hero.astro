---
import { hero } from "../data/data";
---

<section class="relative min-h-[calc(100vh-5rem)] flex items-center overflow-hidden bg-white dark:bg-gray-950 transition-colors duration-300">
    <!-- Fondo decorativo con gradientes -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <!-- Gradiente principal -->
        <div class="absolute top-0 -left-4 w-72 h-72 bg-purple-500/20 dark:bg-purple-500/10 rounded-full blur-3xl"></div>
        <div class="absolute top-20 right-4 w-72 h-72 bg-blue-500/20 dark:bg-blue-500/10 rounded-full blur-3xl"></div>
        <div class="absolute -bottom-8 left-20 w-72 h-72 bg-cyan-500/20 dark:bg-cyan-500/10 rounded-full blur-3xl"></div>
        
        <!-- Patrón de puntos -->
        <div class="absolute inset-0 bg-[radial-gradient(circle_at_1px_1px,rgb(148_163_184/0.15)_1px,transparent_0)] dark:bg-[radial-gradient(circle_at_1px_1px,rgb(148_163_184/0.05)_1px,transparent_0)] bg-size-[24px_24px]"></div>
    </div>

    <div class="container relative mx-auto px-4 sm:px-6 lg:px-8 py-12 lg:py-20">
        <div class="grid lg:grid-cols-2 gap-8 lg:gap-12 items-center">
            <!-- Contenido de texto -->
            <div class="space-y-6 lg:space-y-8 animate-fade-in">
                <!-- Badge -->
                <div class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full bg-linear-to-r from-blue-100 to-purple-100 dark:from-blue-950 dark:to-purple-950 border border-blue-200 dark:border-blue-800">
                    <span class="relative flex h-2 w-2">
                        <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-blue-500 opacity-75"></span>
                        <span class="relative inline-flex rounded-full h-2 w-2 bg-blue-600 dark:bg-blue-400"></span>
                    </span>
                    <span class="text-sm font-medium bg-linear-to-r from-blue-700 to-purple-700 dark:from-blue-400 dark:to-purple-400 bg-clip-text text-transparent">
                        Servicios Aduaneros Profesionales
                    </span>
                </div>

                <!-- Título principal con gradiente -->
                <h1 class="text-4xl sm:text-5xl lg:text-6xl xl:text-7xl font-bold leading-tight">
                    <span class="block text-gray-900 dark:text-white mb-2">
                        {hero.title.split(' ').slice(0, -2).join(' ')}
                    </span>
                    <span class="block bg-linear-to-r from-blue-600 via-purple-600 to-cyan-600 dark:from-blue-400 dark:via-purple-400 dark:to-cyan-400 bg-clip-text text-transparent">
                        {hero.title.split(' ').slice(-2).join(' ')}
                    </span>
                </h1>

                <!-- Descripción -->
                <p class="text-lg sm:text-xl text-gray-600 dark:text-gray-400 leading-relaxed max-w-2xl">
                    {hero.description}
                </p>

                <!-- Botones de acción -->
                <div class="flex flex-col sm:flex-row gap-4">
                    <a
                        href="#contacto"
                        class="group inline-flex items-center justify-center px-6 py-3.5 text-base font-semibold text-white bg-linear-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 rounded-xl shadow-lg hover:shadow-xl transition-all duration-200 transform hover:scale-105"
                    >
                        {hero.button}
                        <svg
                            class="w-5 h-5 ml-2 transition-transform group-hover:translate-x-1"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M13 7l5 5m0 0l-5 5m5-5H6"
                            ></path>
                        </svg>
                    </a>
                    
                    <a
                        href="#servicios"
                        class="group inline-flex items-center justify-center px-6 py-3.5 text-base font-semibold text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 border-2 border-gray-300 dark:border-gray-700 hover:border-blue-600 dark:hover:border-blue-500 rounded-xl shadow-sm hover:shadow-md transition-all duration-200"
                    >
                        Conocer más
                        <svg
                            class="w-5 h-5 ml-2 transition-transform group-hover:translate-y-1"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M19 9l-7 7-7-7"
                            ></path>
                        </svg>
                    </a>
                </div>

                <!-- Stats o características destacadas -->
                <div class="flex flex-wrap gap-6 pt-4">
                    <div class="flex items-center gap-2">
                        <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-green-100 dark:bg-green-950 border border-green-200 dark:border-green-800">
                            <svg class="w-5 h-5 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                        </div>
                        <div>
                            <p class="text-sm font-semibold text-gray-900 dark:text-white">Experiencia</p>
                            <p class="text-xs text-gray-600 dark:text-gray-400">Certificada</p>
                        </div>
                    </div>
                    
                    <div class="flex items-center gap-2">
                        <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-blue-100 dark:bg-blue-950 border border-blue-200 dark:border-blue-800">
                            <svg class="w-5 h-5 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                        </div>
                        <div>
                            <p class="text-sm font-semibold text-gray-900 dark:text-white">Disponibilidad</p>
                            <p class="text-xs text-gray-600 dark:text-gray-400">24/7</p>
                        </div>
                    </div>
                    
                    <div class="flex items-center gap-2">
                        <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-purple-100 dark:bg-purple-950 border border-purple-200 dark:border-purple-800">
                            <svg class="w-5 h-5 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                        </div>
                        <div>
                            <p class="text-sm font-semibold text-gray-900 dark:text-white">Confianza</p>
                            <p class="text-xs text-gray-600 dark:text-gray-400">Garantizada</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Imagen con efectos -->
            <div class="relative lg:h-[600px] animate-fade-in-up">
                <!-- Contenedor de la imagen con efectos -->
                <div class="relative h-full">
                    <!-- Efecto de brillo detrás de la imagen -->
                    <div class="absolute inset-0 bg-linear-to-br from-blue-500/20 to-purple-500/20 dark:from-blue-500/10 dark:to-purple-500/10 rounded-3xl blur-2xl"></div>
                    
                    <!-- Imagen principal -->
                    <div class="relative h-full rounded-2xl overflow-hidden shadow-2xl border border-gray-200 dark:border-gray-800 bg-white dark:bg-gray-900">
                        <img
                            src={`${import.meta.env.BASE_URL}${hero.image}`}
                            alt="Servicios aduaneros profesionales"
                            width="600"
                            height="600"
                            loading="eager"
                            class="w-full h-full object-cover"
                        />
                        
                        <!-- Overlay con gradiente sutil -->
                        <div class="absolute inset-0 bg-linear-to-t from-gray-900/20 to-transparent dark:from-gray-900/40"></div>
                    </div>

                    <!-- Elementos decorativos flotantes -->
                    <div class="absolute -top-4 -right-4 w-24 h-24 bg-blue-500 rounded-full opacity-20 blur-xl animate-pulse"></div>
                    <div class="absolute -bottom-4 -left-4 w-32 h-32 bg-purple-500 rounded-full opacity-20 blur-xl animate-pulse" style="animation-delay: 1s;"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Indicador de scroll -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
        <svg class="w-6 h-6 text-gray-400 dark:text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
        </svg>
    </div>
</section>

<style>
    @keyframes fade-in {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @keyframes fade-in-up {
        from {
            opacity: 0;
            transform: translateY(40px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-fade-in {
        animation: fade-in 0.8s ease-out forwards;
    }

    .animate-fade-in-up {
        animation: fade-in-up 1s ease-out 0.2s forwards;
        opacity: 0;
    }
</style>

---
interface Props {
    question: string;
    answer: string;
}
const { question, answer } = Astro.props;
---

<details class="group bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-2xl overflow-hidden hover:shadow-lg transition-all duration-300">
    <summary class="flex items-center justify-between cursor-pointer p-6 lg:p-8 list-none">
        <!-- Icono de pregunta -->
        <div class="flex items-start gap-4 flex-1">
            <div class="shrink-0 w-10 h-10 bg-linear-to-br from-blue-500 to-purple-500 rounded-xl flex items-center justify-center group-open:scale-110 transition-transform duration-300">
                <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 4C9.243 4 7 6.243 7 9h2c0-1.654 1.346-3 3-3s3 1.346 3 3c0 1.069-.454 1.465-1.481 2.255-.382.294-.813.626-1.226 1.038C10.981 13.604 10.995 14.897 11 15v2h2v-2.009c0-.024.023-.601.707-1.284.32-.32.682-.598 1.031-.867C15.798 12.024 17 11.1 17 9c0-2.757-2.243-5-5-5zm-1 14h2v2h-2z"/>
                </svg>
            </div>

            <!-- Pregunta -->
            <h3 class="flex-1 text-base lg:text-lg font-semibold text-gray-900 dark:text-white group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors duration-300">
                {question}
            </h3>
        </div>

        <!-- Icono de expand/collapse -->
        <div class="shrink-0 ml-4">
            <div class="w-8 h-8 flex items-center justify-center rounded-lg bg-gray-100 dark:bg-gray-700 group-hover:bg-blue-50 dark:group-hover:bg-blue-950 transition-colors duration-300">
                <svg 
                    class="w-5 h-5 text-gray-600 dark:text-gray-400 group-open:rotate-180 transition-transform duration-300" 
                    fill="none" 
                    stroke="currentColor" 
                    viewBox="0 0 24 24"
                >
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                </svg>
            </div>
        </div>
    </summary>

    <!-- Respuesta -->
    <div class="px-6 lg:px-8 pb-6 lg:pb-8">
        <div class="pl-14 border-l-4 border-blue-500 dark:border-blue-400">
            <div class="pl-4 flex items-start gap-3">
                <!-- Icono de respuesta -->
                <div class="shrink-0 w-8 h-8 bg-green-100 dark:bg-green-950 rounded-lg flex items-center justify-center mt-1">
                    <svg class="w-4 h-4 text-green-600 dark:text-green-400" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 2C6.486 2 2 6.486 2 12s4.486 10 10 10 10-4.486 10-10S17.514 2 12 2zm0 18c-4.411 0-8-3.589-8-8s3.589-8 8-8 8 3.589 8 8-3.589 8-8 8z"/>
                        <path d="M9.999 13.587 7.7 11.292l-1.412 1.416 3.713 3.705 6.706-6.706-1.414-1.414z"/>
                    </svg>
                </div>

                <!-- Texto de la respuesta -->
                <p class="flex-1 text-sm lg:text-base text-gray-600 dark:text-gray-400 leading-relaxed">
                    {answer}
                </p>
            </div>
        </div>
    </div>
</details>

---
import Testimonial from "./Testimonial.astro";
import HeaderSection from "../shared/HeaderSection.astro";
import { headerTestimonials, testimonials } from "../data/data";
---

<section id="testimonios" class="relative py-16 lg:py-24 bg-gray-50 dark:bg-gray-900 transition-colors duration-300 overflow-hidden">
  <!-- Elementos decorativos de fondo -->
  <div class="absolute inset-0 pointer-events-none overflow-hidden">
    <div class="absolute top-1/3 -left-48 w-96 h-96 bg-purple-500/10 dark:bg-purple-500/5 rounded-full blur-3xl"></div>
    <div class="absolute bottom-1/3 -right-48 w-96 h-96 bg-blue-500/10 dark:bg-blue-500/5 rounded-full blur-3xl"></div>
    
    <!-- Patr칩n de puntos -->
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_1px_1px,rgb(148_163_184/0.15)_1px,transparent_0)] dark:bg-[radial-gradient(circle_at_1px_1px,rgb(148_163_184/0.05)_1px,transparent_0)] bg-size-[24px_24px]"></div>
  </div>

  <div class="container relative mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header de la secci칩n -->
    <HeaderSection {...headerTestimonials} />
    
    <!-- Grid de testimonios -->
    <div class="mt-12 lg:mt-16 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
      {testimonials.map((testimonial, index) => (
        <div style={`animation-delay: ${index * 0.15}s;`} class="animate-fade-in-up">
          <Testimonial {...testimonial} />
        </div>
      ))}
    </div>

    <!-- Stats decorativos -->
    <div class="mt-16 grid grid-cols-2 md:grid-cols-4 gap-8 pt-12 border-t border-gray-200 dark:border-gray-800">
      <div class="text-center animate-fade-in" style="animation-delay: 0.5s;">
        <p class="text-3xl lg:text-4xl font-bold bg-linear-to-r from-blue-600 to-purple-600 dark:from-blue-400 dark:to-purple-400 bg-clip-text text-transparent">100+</p>
        <p class="text-sm text-gray-600 dark:text-gray-400 mt-2">Clientes Satisfechos</p>
      </div>
      <div class="text-center animate-fade-in" style="animation-delay: 0.6s;">
        <p class="text-3xl lg:text-4xl font-bold bg-linear-to-r from-blue-600 to-purple-600 dark:from-blue-400 dark:to-purple-400 bg-clip-text text-transparent">4.9</p>
        <p class="text-sm text-gray-600 dark:text-gray-400 mt-2">Calificaci칩n</p>
      </div>
      <div class="text-center animate-fade-in" style="animation-delay: 0.7s;">
        <p class="text-3xl lg:text-4xl font-bold bg-linear-to-r from-blue-600 to-purple-600 dark:from-blue-400 dark:to-purple-400 bg-clip-text text-transparent">10+</p>
        <p class="text-sm text-gray-600 dark:text-gray-400 mt-2">A침os Experiencia</p>
      </div>
      <div class="text-center animate-fade-in" style="animation-delay: 0.8s;">
        <p class="text-3xl lg:text-4xl font-bold bg-linear-to-r from-blue-600 to-purple-600 dark:from-blue-400 dark:to-purple-400 bg-clip-text text-transparent">24/7</p>
        <p class="text-sm text-gray-600 dark:text-gray-400 mt-2">Soporte</p>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fade-in 0.8s ease-out forwards;
    opacity: 0;
  }

  .animate-fade-in-up {
    animation: fade-in-up 0.8s ease-out forwards;
    opacity: 0;
  }
</style>

---
import HeaderSection from "../shared/HeaderSection.astro";;

import Process from "./Process.astro";

import { headerProcesses, processes } from "../data/data.ts";
---
<section id="process" class="relative overflow-hidden pt-32 flex items-center justify-center ">
    <div class="container  py-4 mx-auto px-4 sm:px-6 lg:px-8 ">
        <HeaderSection {...headerProcesses}/>

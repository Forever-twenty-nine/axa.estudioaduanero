---
interface Props {
  subtitle: string;
  title: string;
  description: string;
}

const { subtitle, title, description } = Astro.props;
---

<div class="text-center max-w-3xl mx-auto mb-12 lg:mb-16 animate-fade-in">
  <!-- Badge/Subtitle -->
  <span class="inline-block px-4 py-2 mb-4 text-sm font-semibold bg-linear-to-r from-blue-100 to-purple-100 dark:from-blue-950 dark:to-purple-950 text-blue-700 dark:text-blue-400 rounded-full border border-blue-200 dark:border-blue-800">
    {subtitle}
  </span>
  
  <!-- Título -->
  <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-gray-900 dark:text-white mb-4">
    {title}
  </h2>
  
  <!-- Descripción -->
  <p class="text-lg text-gray-700 dark:text-gray-300 leading-relaxed">
    {description}
  </p>
  
  <!-- Línea decorativa -->
  <div class="flex items-center justify-center gap-2 mt-6">
    <div class="w-12 h-1 bg-linear-to-r from-transparent via-blue-500 to-transparent rounded-full"></div>
    <div class="w-2 h-2 bg-blue-600 dark:bg-blue-400 rounded-full"></div>
    <div class="w-12 h-1 bg-linear-to-r from-transparent via-purple-500 to-transparent rounded-full"></div>
  </div>
</div>
